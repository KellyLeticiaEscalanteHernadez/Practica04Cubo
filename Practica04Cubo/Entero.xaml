<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica04Cubo.Entero"
             Title="Entero">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Image
          Source="entero.png"
          HeightRequest="185"
          Aspect="AspectFit"
          SemanticProperties.Description="dot net bot in a race car number eight" />
        <Label Text="Ingrese un número entero positivo" 
               FontSize="Large" 
               HorizontalOptions="Center" />
        <Entry x:Name="NumberEntry" Placeholder="Número" Keyboard="Numeric" />
        <HorizontalStackLayout Spacing="20">
            <Button Text="Obtener Cuadrado" Clicked="OnSquareClicked" />
            <Button Text="Obtener Cubo" Clicked="OnCubeClicked" />
        </HorizontalStackLayout>
        <Label x:Name="Resultado" FontSize="Medium" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>